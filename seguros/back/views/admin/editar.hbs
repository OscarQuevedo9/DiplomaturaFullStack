<div class="container" style="margin:100px auto">
    <div class="row">
        {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
        <div class="col-6">
            <h4>Modificar novedad</h4>
            <form action="/admin/novedades/editar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="Título" value="{{novedad.titulo}}" class="form-control"
                    name="titulo">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Subtítulo" value="{{novedad.subtitulo}}" 
                    class="form-control" name="subtitulo">
                </div>
                <div class="form-group">
                    <textarea placeholder="Cuerpo" class="form-control" 
                    name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-warning">Guardar</button>
            </form>
        </div>
    </div>
</div>