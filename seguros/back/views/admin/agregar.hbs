<div class="container" style="margin:100px auto">
    <div class="row">
        {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
        <div class="col-6">
            <h4>Agregar novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="row">
                    <input type="text" class="form-control" placeholder="Título" name="titulo">
                </div>
                <div class="row">
                    <textarea type="text" class="form-control" placeholder="Subtítulo" name="subtitulo">
                    </textarea>
                </div>
                <div class="row">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">
                    </textarea>
                </div>
                <button type="submit" class="btn btn-warning">Guardar</button>
            </form>
        </div>
    </div>
</div>