<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{usuario}}! <a class="btn btn-warning" href="/admin/login/logout">
            Cerrar sesión <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    {{#if erased}}
    <div class="row bg-danger">
        <h5>Registro eliminado.</h5>
    </div>
    {{/if}}
    <div class="row">
        <div class="col-9">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-3 d-flex flex-row text-end d-flex justify-content-around">
            <a class="btn btn-warning" href="/admin/novedades/agregar"><i class="fa fa-plus"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thread>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thread>

                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a title="Editar" class="btn btn-sm btn-warning" href="/admin/novedades/editar/{{id}}">
                                <i class="fa-solid fa-pencil"></i></a>
                            <a title="Eliminar" class="btn btn-sm btn-warning" href="/admin/novedades/borrar/{{id}}">
                                <i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>